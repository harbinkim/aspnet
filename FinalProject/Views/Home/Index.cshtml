@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>The Learning Center</h1>
    <p class="lead">The place for technology classes.</p>
    <p><a @*href="http://asp.net"*@ class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="col">
    <table>
        <tr>
            <td>
                <div class="col-md-10">
                    <h2>Class List</h2>
                    <p>See all of our class offerings. </p>
                    @Html.ActionLink("Learn More", "Courses","Home",new { @class = "btn btn-default" })
                </div>
            </td>
            <td>
                <div class="col-md-4">
                    <h2>Your enrolled classes</h2>
                    <p>See the classes you are enrolled in.</p>
                    @Html.ActionLink("Go", "UserCourses", "Home", new { @class = "btn btn-default" })
                </div>
            </td>
            <td>
                <div class="col-md-4">
                    <h2>Enroll in a class</h2>
                    <p>Take a new class.</p>
                    @Html.ActionLink("Go", "Enroll", "Home", new { @class = "btn btn-default" })
                </div>
            </td>
        </tr>
    </table>
      
</div>